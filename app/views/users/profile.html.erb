<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
        <%= gravatar_for @user %>
        <h1><%= @user.name %></h1><br>
        <span><%= link_to "view profile", profile_user_path(@user) %></span>
        <span><%= link_to "Microposts", user_path(@user) %> (<%= @user.microposts.count %>)</span>
    </section>
    <section class="stats">
      <%= render 'shared/stats' %>
    </section>
 </aside>
 <div class="col-md-8 skills">
   <%= render 'follow_form' if logged_in? %>
   <div class="skill">
     <div class="topic">
       <p class="md">I want to learn</p>&nbsp;&nbsp;
       <p class="lg oblique">
         <% if !@user.skill_want.nil? %>
          <%= @user.skill_want %>
        <% else %>
          No data yet
        <% end %>
       <p>  &nbsp;&nbsp;
       (&nbsp;
       <p>Level :
         <% if @user.skill_want_level == 1 %>
            Beginner
         <% elsif @user.skill_want_level == 2 %>
            Intermediate
         <% elsif @user.skill_want_level == 3 %>
            Advanced
         <% else %>
            ---
         <% end %>
       </p>
       &nbsp;)
     </div>
     <div class="description">
      <p class="bold">Description</p>
      <p>
        <% if !@user.skill_want_description.nil? %>
          <%= @user.skill_want_description %>
        <% else %>
          No description yet
        <% end %>
      </p>
    </div>
   </div>
   <div class="skill">
     <div class="topic">
       <p class="md">I can teach you</p>&nbsp;&nbsp;
       <p class="lg oblique">
         <% if !@user.skill_teach.nil? %>
          <%= @user.skill_teach %>
        <% else %>
          No data yet
        <% end %>
       <p>&nbsp;&nbsp;
       (&nbsp;
       <p>Level :
         <% if @user.skill_teach_level.nil? %>
          ---
         <% elsif @user.skill_teach_level == 1 %>
            Beginner
         <% elsif @user.skill_teach_level == 2 %>
            Intermediate
         <% elsif @user.skill_teach_level == 3 %>
            Advanced
         <% end %>
       </p>
       &nbsp;)
     </div>
     <div class="description">
      <p class="bold">Description</p>
      <p>
        <% if !@user.skill_teach_description.nil? %>
          <%= @user.skill_teach_description %>
        <% else %>
          No description yet
        <% end %>
      </p>
    </div>
   </div>
   <p class="align-centert">
     <% if @user == current_user %>
      <%= link_to "Edit your profile", edit_user_path(@user) %>
     <% end %>
   </p>
 </div>
</div>
